@model IEnumerable<ProjetoPonto.Entity.Solucao>

@{
    ViewBag.Title = "ListaSolucoes";
}
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">

<h2>Solucoes do Problema : @ViewBag.DescricaoProblema</h2>

<p>
    @Html.ActionLink("Create New", "EditSolucao", 
                new { idProblema = ViewBag.IdProblema, idSolucao = 0 })
</p>
    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Empresas
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditSolucao", 
                new { idProblema = item.IdProblema, idSolucao = item.IdSolucao }) |
            @Html.ActionLink("Delete", "DeleteSolucao", new { idSolucao = item.IdSolucao }, new { @onclick = "return confirm ('Confirma exclusão?');" })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Voltar para Problema", "EditProblema", new { id = ViewBag.IdProblema })
</div>
                        
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>