@model IEnumerable<ProjetoPonto.Entity.Marca>

@{
    ViewBag.Title = "Index";
}
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
    @Html.ActionLink("Novo", "Edit", new { id = 0 })
</p>
                    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Marcas
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                          <div>
                            @using (Html.BeginForm())
                            {
                                <p>Digite o nome da marca</p>
                                
                                <input type="text" name="texto" id="texto" class="form-control" placeholder="Digite a pesquisa" />
                                <div>
                                    <button type="submit" class="btn btn-default">Filtrar </button>
                                </div>   
                            }
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdMarca }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdMarca},
                new { @onclick = "return confirm('Tem certeza?');"})
        </td>
    </tr>
}
 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>
