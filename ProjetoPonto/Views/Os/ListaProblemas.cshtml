@model IEnumerable<ProjetoPonto.Entity.Problema>

@{
    ViewBag.Title = "ListaProblemas";
}
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">

<h2>Problemas da Ordem de Servico nº: @ViewBag.NumeroOs</h2>

<p>
    @Html.ActionLink("Create New", "EditProblema", 
                new { idOs = ViewBag.IdOs, idProblema = 0 })
</p>
    <hr class="section-heading-spacer">

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Empresas
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdSecao)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
         <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SecaoProblema.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditProblema", 
                new { idOs = item.IdOs, idProblema = item.IdProblema }) |
            @Html.ActionLink("Delete", "DeleteProblema", new { idProblema = item.IdProblema }, new { @onclick = "return confirm ('Confirma exclusão?');" })
        </td>
    </tr>
}

</table>

<div>
    @Html.ActionLink("Voltar para Os", "Edit", new { id = ViewBag.IdOs })
</div>
                        
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>