@model ProjetoPonto.Entity.Os

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {

     <div class="form-horizontal">
        <h4>Empresa</h4>
        <hr />

        @Html.HiddenFor(model => model.IdOs)

       <div class="form-group">
            @Html.LabelFor(model => model.NumeroOs, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.NumeroOs, new { @class = "form-control" })
            </div>
        </div>

       <div class="form-group">
            @Html.LabelFor(model => model.Observacao, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Observacao, new { @class = "form-control" })
            </div>
        </div>
           <div class="form-group">
            @Html.LabelFor(model => model.Serie, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.Serie, new { @class = "form-control" })
            </div>
        </div>
          <div class="form-group">
            @Html.LabelFor(model => model.DataAbertura, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.DataAbertura, new { @class = "form-control" })
            </div>
        </div>
         <div class="form-group">
            @Html.LabelFor(model => model.DataFechamento, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.DataFechamento, new { @class = "form-control" })
            </div>
        </div>
         

         <div class="form-group">
            @Html.LabelFor(model => model.IdCliente, new { @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DropDownList("IdCliente")
        </div>
             </div>
            <div class="form-group">
            @Html.LabelFor(model => model.IdModeloMaquina,  new{ @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DropDownList("IdModeloMaquina")
        </div>
             </div>
           <div class="form-group">
            @Html.LabelFor(model => model.IdStatusOs,  new{ @class = "control-label col-md-2" })
          <div class="col-md-10">
            @Html.DropDownList("IdStatusOs")
        </div>
             </div>

        
         <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default"  onclick="return validar();" />
          </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")

</div>
    @if (Model.IdCliente != 0)
    {
        @Html.ActionLink("Problemas", "ListaProblemas", new { idOs= Model.IdOs })
    }

@if (ViewBag.Erro != null && ViewBag.Erro != "")
{
    <script>
        alert('@Html.Raw(ViewBag.Erro)');
    </script>
}
