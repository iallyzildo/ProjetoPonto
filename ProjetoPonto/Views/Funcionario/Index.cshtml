@model IEnumerable<ProjetoPonto.Entity.Funcionario>

@{
    ViewBag.Title = "Index";
}
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
     @Html.ActionLink("Novo", "Edit", new { id = 0 }, new { @class = "btn btn-primary", @style = "color:white" }) 
</p>
                   

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Funcionarios
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div>
                            @using (Html.BeginForm())
                            {
                                <p>Digite o nome</p>
                                <div class="col-md-4">
                                <input type="text" name="texto" id="texto" class="form-control" placeholder="Digite a pesquisa" />
                                 </div>
                                   <div>
                                    <button type="submit" class="btn btn-primary">Filtrar </button>
                                </div>   
                            }
                        </div>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>

        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cpf)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
           
            @{
    string formatado = Convert.ToUInt64(item.Cpf).ToString(@"000\.000\.000\-00");
    @formatado
                }

        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdFuncionario }, new { @class = "btn btn-primary", @style = "color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.IdFuncionario }, new { @class = "btn btn-primary", @style = "color:white",@onclick = "return confirm('Tem certeza?');" })
        </td>
    </tr>
}
 </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>
