@model IEnumerable<ProjetoPonto.Entity.Ponto>

@{
    ViewBag.Title = "Index";
}

<body>
    <a name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <p>
                 @Html.ActionLink("Entrada", "Registro", new { id = 0 }, new { @class = "btn btn-primary", @style = "color:white" }) 
                </p>
                

                <div class="clearfix"></div>


                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Gerenciamento de Ponto
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.HoraInicial)
                                            </th>
                                             <th>
                                                @Html.DisplayNameFor(model => model.HoraFinal)
                                            </th>
                                             <th>
                                                @Html.DisplayNameFor(model => model.DataAbertura)
                                            </th>
                                             <th>
                                                @Html.DisplayNameFor(model => model.Observacao)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Usuario.Login)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.Os.NumeroOs)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.TipoPonto.Descricao)
                                            </th>
                                            <th></th>
                                        </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.HoraInicial)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.HoraFinal)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.DataAbertura)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.Observacao)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.Usuario.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Os.NumeroOs)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.TipoPonto.Descricao)
        </td>

        <td>
            
            

            <button class="btn btn-primary" onclick="location.href='@Url.Action("Registro", "Ponto", new { id = item.IdPonto })'">Saída</button>
            
        </td>
    </tr>
}
                                </table>

                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
    </div>



</body>
