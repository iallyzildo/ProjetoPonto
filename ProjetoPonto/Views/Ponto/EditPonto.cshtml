@model ProjetoPonto.Entity.Ponto

<body>

    <div class="content-section-a">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h4>Registro de Ponto</h4>
                <hr />

                @Html.HiddenFor(model => model.IdPonto)

                <div class="form-group">
            @Html.LabelFor(model => model.DataAbertura, new { @class = "control-label col-md-5" })
            <div class="col-md-3">
                @Html.TextBoxFor(model => model.DataAbertura,String.Format("{0:dd/MM/yyyy}", Model.DataAbertura), new { @class = "form-control" })
            </div>
        </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HoraInicial, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.HoraInicial, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.HoraFinal, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.HoraFinal, new { @class = "form-control" })
                    </div>
                </div>



                <div class="form-group">

                    @Html.LabelFor(model => model.Observacao, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="control-label col-md-5">Numero da Ordem de Serviço</span>
                    <div class="col-md-3">
                        @Html.DropDownList("IdOs",null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdUsuario, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.DropDownList("IdUsuario",null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdTipoPonto, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.DropDownList("IdTipoPonto",null, new { @class = "form-control" })
                    </div>
                </div>


                <div class="form-group">
                    <label class="col-md-5 control-label" for="singlebutton"></label>
                    <div class="col-md-4">
                        <input type="submit" value="Confirmar" class="btn btn-primary" onclick="return validar();" />
                    </div>
                </div>
            </div>
        }

        <div>
            <button class="btn btn-primary" onclick="location.href='@Url.Action("ListaPontos", "Ponto")'">Voltar</button>

        </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        @if (ViewBag.Erro != null && ViewBag.Erro != "")
        {
            <script>
                alert('@ViewBag.Erro');
            </script>
        }
        <script>
            $("#HoraInicial").mask('00:00:00');
            $("#HoraFinal").mask('00:00:00');
            $("#DataAbertura").mask('00/00/0000', { reverse: false });
            //$(function () {
            //    var options = new Array();
            //    options['language'] = 'pt-BR';
            //    $('#DataAbertura').datepicker(options);
            //})

            function validar() {
                if ($("#HoraInicial").val() == "") {
                    alert('A hora inicial é obrigatória');
                    return false;
                }
                return true;
            }
        </script>
    </div>

    
</body>
