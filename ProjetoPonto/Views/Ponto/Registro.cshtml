@model ProjetoPonto.Entity.Ponto

<body>

    <div class="content-section-a">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal">
                <h4>Registro de Ponto</h4>
                <hr />



                @Html.HiddenFor(model => model.IdPonto)
                @Html.Hidden("DataAbertura", null, new { @class = "form-control" })
                @Html.Hidden("HoraInicial", null, new { @class = "form-control" })
                @Html.Hidden("IdUsuario", null, new { @class = "form-control" })

                @if (Model.IdPonto != 0)
                {
                    @Html.Hidden("HoraFinal", null, new { @class = "form-control" })
                }

                <div class="form-group">
                    <span class="control-label col-md-5">Numero da Ordem de Serviço</span>
                    <div class="col-md-3">
                        @Html.DropDownList("IdOs", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <span class="control-label col-md-5">Local de Trabalho</span>
                    <div class="col-md-3">
                        @Html.DropDownList("IdTipoPonto", null, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">

                    @Html.LabelFor(model => model.Observacao, new { @class = "control-label col-md-5" })
                    <div class="col-md-3">
                        @Html.TextAreaFor(model => model.Observacao, new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-5 control-label" for="singlebutton"></label>
                    <div class="col-md-4">
                        <input type="submit" value="Confirmar" class="btn btn-primary" onclick="return validar();" />
                    </div>
                </div>
            </div>
        }

        <div>
           <button class="btn btn-primary" onclick="location.href='@Url.Action("Index", "Ponto")'">Voltar</button>
          
        </div>


        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
        @if (ViewBag.Erro != null && ViewBag.Erro != "")
        {
            <script>
                alert('@ViewBag.Erro');
            </script>
        }
        <script>


            function validar() {
                if ($("#HoraInicial").val() == "") {
                    alert('A hora inicial é obrigatória');
                    return false;
                }
                return true;
            }
        </script>
    </div>
    </div>
    </div>
    
</body>
