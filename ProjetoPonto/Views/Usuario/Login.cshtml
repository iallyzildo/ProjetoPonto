@model ProjetoPonto.Entity.Usuario

@{
    ViewBag.Title = "Login";
}

<body>


   @using (Html.BeginForm())
   {
       <div id="loginModal" class="modal show" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
  <div class="modal-content">
      <div class="modal-header">
          <a href="/" class="close"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">x</span></a>
          <h1 class="text-center">Área Restrita</h1>
      </div>
      <div class="modal-body">
          <form class="form col-md-12 center-block">
            <div class="form-group">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control input-lg",placeholder="Login"  })
            </div>
            <div class="form-group">
                     @Html.PasswordFor(model => model.Senha, new { @class = "form-control input-lg",placeholder="Senha" })
            </div>
            <div class="form-group">
              <button class="btn btn-primary btn-lg btn-block" onclick="return validar();">Entrar</button>
            </div>
          </form>
      </div>
      <div class="modal-footer">
          <div class="col-md-12">
          <a href="/" class="btn btn-default btn-lg"><i class="fa fa-twitter fa-fw"></i> <span class="network-name">Cancel</span></a>
		  </div>	
      </div>
  </div>
  </div>
</div>
   
   }


    
@if (ViewBag.Erro != null && ViewBag.Erro != "")
{ 
<script>
    alert('@Html.Raw(ViewBag.Erro)');
</script>    
}
<script>
    function validar() {
        if ($("#Login").val() == "") {
            alert("Login Obrigatório");
            return false;
        }
        if ($("#Senha").val() == "") {
            alert("Senha obrigatória");
            return false;
        }
        return true;
    }
</script>
                </body>