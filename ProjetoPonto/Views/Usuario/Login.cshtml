@model ProjetoPonto.Entity.Usuario

@{
    ViewBag.Title = "Login";
}

<body>


   @using (Html.BeginForm()) {
       <center>
    <div class="container">
   <form class="form-signin">
       <br />
       <br />
       <br />
       <br />

        <h2 class="form-signin-heading">Area Restrita</h2>
       <br />
        <label for="inputEmail" class="sr-only">Email address</label>
        @Html.TextBoxFor(model => model.Login, new { @class = "form-control",placeholder="Login"  })
       <br />

        <label for="inputPassword" class="sr-only">Password</label>
         @Html.PasswordFor(model => model.Senha, new { @class = "form-control",placeholder="Senha" })
       <br />
       <br />
       <br />
       <br />
       <input type="submit" value="Entrar" class="btn btn-default btn-lg" onclick="return validar();" />
      </form>
       </div>

           </center>
   
}


@if (ViewBag.Erro != null && ViewBag.Erro != "")
{ 
<script>
    alert('@Html.Raw(ViewBag.Erro)');
</script>    
}
<script>
    function validar() {
        if ($("#Login").val() == "") {
            alert("Login Obrigatório");
            return false;
        }
        if ($("#Senha").val() == "") {
            alert("Senha obrigatória");
            return false;
        }
        return true;
    }
</script>
                </body>