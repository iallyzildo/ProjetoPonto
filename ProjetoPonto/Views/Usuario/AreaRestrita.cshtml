   <script>
       $(function () {

          
           // Donut Chart
           Morris.Donut({
               element: 'morris-donut-chart',
               data: [{
                   label: "Fechados",
                   value: @ViewBag.TotalPontos
               }, {
                   label: "Abertos",
                   value: @ViewBag.TotalPontosAbertos

               }],
               resize: true
           });



           // Bar Chart
           Morris.Bar({
               element: 'morris-bar-chart',
               data: [{
                   device: 'Mecanicos',
                   quantidade: @ViewBag.TotalUsuariosMecanicos 
               }, {
                   device: 'Administração',
                   quantidade: @ViewBag.TotalUsuariosAdministradores
               }, {
                   device: 'Gerentes',
                   quantidade: @ViewBag.TotalUsuariosGerentes

               }],
               xkey: 'device',
               ykeys: ['quantidade'],
               labels: ['Quantidade'],
               barRatio: 0.4,
               xLabelAngle: 35,
               hideHover: 'auto',
               resize: true
           });


       });


   </script>
