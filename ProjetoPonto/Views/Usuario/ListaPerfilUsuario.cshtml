@model IEnumerable<ProjetoPonto.Entity.PerfilUsuario>

@{
    ViewBag.Title = "ListaPerfilUsuarios";
}
<body>
    <a name="services"></a>
    <div class="content-section-a">

        
<h2>Endereços do(a) @ViewBag.LoginUsuario</h2>

<div class="container">
            <div class="row">
                <p>
    @Html.ActionLink("Create New", "EditPerfilUsuario", 
                new { idUsuario = ViewBag.IdUsuario, idPerfilUsuario = 0 })
</p>
 </p>
                <hr class="section-heading-spacer">

                <div class="clearfix"></div>


                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Gerenciamento de Usuarios
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
        <th>
            @Html.DisplayNameFor(model => model.DataAutorizacao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdPerfil)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.DataAutorizacao)
        </td>
         <td>
            @Html.DisplayFor(modelItem => item.Perfil.Descricao)
        </td>

        <td>
            @Html.ActionLink("Edit", "EditPerfilUsuario", 
                new { idUsuario = item.IdUsuario, idPerfilUsuario = item.IdPerfilUsuario }) |
            @Html.ActionLink("Delete", "DeletePerfilUsuario", new { idPerfilUsuario = item.IdPerfilUsuario }, new { @onclick = "return confirm ('Confirma exclusão?');" })
        </td>
    </tr>
}

 </table>
<div>
    @Html.ActionLink("Voltar para Usuario", "Edit", new { id = ViewBag.IdUsuario })
</div>
                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
    </div>


