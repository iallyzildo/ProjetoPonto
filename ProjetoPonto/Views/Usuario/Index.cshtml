@model IEnumerable<ProjetoPonto.Entity.Usuario>

@{
    ViewBag.Title = "Index";
}
<body>
    <a name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                 <p>
                   
                    @Html.ActionLink("Novo", "Edit", new { id = 0 }, new { @class = "btn btn-primary", @style = "color:white" }) 
                </p>
                

                <div class="clearfix"></div>


                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Gerenciamento de Usuarios
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="table-responsive">
                             <div>
                            @using (Html.BeginForm())
                            {
                                <p>Digite o nome</p>
                                <div class="col-md-4">
                                <input type="text" name="texto" id="texto" class="form-control" placeholder="Digite a pesquisa" />
                                    </div>
                                <div>
                                    <button type="submit" class="btn btn-primary">Buscar </button>
                                </div>   
                            }
                            </div>
                                <table class="table table-striped table-bordered table-hover">
                                    <thead>
                                        <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Login)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdFuncionario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdEmpresa)
        </th>
                                            <th>
            @Html.DisplayNameFor(model => model.IdPerfil)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Login)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Senha)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Funcionario.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Empresa.RazaoSocial)
        </td>
          <td>
            @Html.DisplayFor(modelItem => item.Perfil.Descricao)
        </td>
        <td>
             @Html.ActionLink("Editar", "Edit", new { id = item.IdUsuario }, new { @class = "btn btn-primary", @style = "color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { id=item.IdUsuario }, new { @class = "btn btn-primary", @style = "color:white",@onclick = "return confirm('Tem certeza?');" })

        </td>
    </tr>
}

     </table>

                            </div>
                            <!-- /.table-responsive -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                </div>
            </div>
        </div>
    </div>



</body>
