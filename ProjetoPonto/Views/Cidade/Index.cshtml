@model IEnumerable<ProjetoPonto.Entity.Cidade>

@{
    ViewBag.Title = "Index";
}
<body>
  <a  name="services"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                          <p>
     @Html.ActionLink("Novo", "Edit", new { id = 0 }, new { @class = "btn btn-primary", @style = "color:white" }) 
</p>
                  

                    <div class="clearfix"></div>

    
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Gerenciamento de Cidades
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                           <div>
                            @using (Html.BeginForm())
                            {
                                <p>Digite a Cidade</p>
                                 <div class="col-md-4">
                                <input type="text" name="texto" id="texto" class="form-control" placeholder="Digite a pesquisa" />
                                 </div>
                                   <div>
                                    <button type="submit" class="btn btn-primary">Filtrar </button>
                                </div>   
                            }
                            </div>
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Descricao)
                                    </th>
                                    <th>
                                        Estado
                                    </th>
                                    <th></th>
                                </tr>

@foreach (var item in Model)
{
    <tr class="active">
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.Descricao)
        </td>
        <td>
            <center>
            @Html.ActionLink("Editar", "Edit", new { id = item.IdCidade }, new { @class = "btn btn-primary", @style = "color:white" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.IdCidade }, new { @class = "btn btn-primary", @style = "color:white", @onclick = "return confirm('Tem certeza?');" })
        </center>
                </td>
    </tr>
}

    
                        </table>

                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        </div>  
            </div>
        </div>
   
   
    
</body>
