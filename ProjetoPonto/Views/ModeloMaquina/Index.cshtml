        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdTipoMaquina)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Marca.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoMaquina.Descricao)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IdModeloMaquina }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IdModeloMaquina },
                new { @onclick = "return confirm('Tem certeza?');"})
